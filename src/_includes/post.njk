<main>
    <article>
        <section>
            <div id="post_info">
            {{ date | date("MMMM d, yyyy") }}
            {% if tags and tags.length > 0 %}
                <span class="material-symbols-outlined" id="tag_icon">
                sell
                </span>
                {{ tags | join(", ") }}
            {% endif %}
            </div>
            <h1>{{ title }}</h1>
            {{ content | safe }}
        </section>
    </article>
    <hr style="margin-top: 30px; margin-bottom: 15px;" />
    <script src="https://giscus.app/client.js"
        data-repo="CLCK0622/Personal-Site"
        data-repo-id="R_kgDOMf7uGA"
        data-category="Announcements"
        data-category-id="DIC_kwDOMf7uGM4ClgI5"
        data-mapping="url"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="preferred_color_scheme"
        data-lang="en"
        crossorigin="anonymous"
        async>
